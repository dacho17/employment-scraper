{
    "compilerOptions": {
      "allowJs": true,
      "target": "ESNext",
      "module": "commonjs",
      "rootDir": "./src/",
      "outDir": "./dist/",
      "moduleResolution": "node",
      "importHelpers": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": ["node_modules/@types"],
      "sourceMap": true,
    },
    "lib": ["es2015"]
}
